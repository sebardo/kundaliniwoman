{% extends core['extended_layout'] ? core['extended_layout'] : 'CoreBundle:Base:base.layout.html.twig' %}

{% block header_style %}padding: 14em 0 7em 0;background-position: 54% 62%;{% endblock %}

{% block wrappers %}
    <div id="features-wrapper">
        <section id="features" class="container">
            <div class="row">
                {% set items = get_menu_items(true) %}
                {% for item in items %}
                {% set col = 4 %}
                {% set col =  12 // (items | length) %}
                <div class="{{col}}u 12u(mobile)">
                    <section>
                        {% if item.image.path is defined %}
                        <a href="{{ path('coreextra_menuitem_menu', {slug:  item.slug} ) }}" class="image featured">
                            <img src="/uploads/images/menu/{{item.id}}/thumbnail/{{ get_thumb_image(item.image.path, '260')}}" alt="">
                        </a>
                        {% endif %}
                        <header><h3>{{item.name}}</h3></header>
                         {{ item.shortDescription | raw}}
                    </section>
                </div>
                {% endfor %}
            </div>
        </section>
    </div>
    
    {% include 'CoreExtraBundle:Slider:carousel.html.twig' %}
    
{% endblock %}


