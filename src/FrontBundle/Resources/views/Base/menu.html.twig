<nav id="nav">
    <ul>
        <li style="white-space: nowrap;"><a class="icon fa-home" href="/"><span>{{ 'home' | trans  }}</span></a></li>
        
        {% set items = get_menu_items(true) %}
        {% for item in items %}
            {% if item.subitems | length == 0 %}
            <li style="white-space: nowrap;"><a class="icon fa-home" href="{{ path('core_menuitem_menu', {slug:  item.slug} ) }}"><span>{{item.name}}</span></a></li>
            {% else %}
            <li class="opener" style="-webkit-user-select: none; cursor: pointer; white-space: nowrap; opacity: 1;"><a href="{{ path('core_menuitem_menu', {slug:  item.slug} ) }}" class="icon fa-bar-chart-o"><span>{{item.name}}</span></a>
                <ul class="" style="-webkit-user-select: none; display: none; position: absolute;">
                    {% for sub in item.subitems %}
                        <li style="white-space: nowrap;"><a href="{{ path('core_menuitem_menu', {slug:  sub.slug} ) }}" style="display: block;">{{sub.name}}</a></li>
                    {% endfor %}
                </ul>
            </li>
            {% endif %}
        {% endfor %}
        
        <li style="white-space: nowrap;"><a class="icon fa-edit" href="/blog"><span>{{ 'blog.singular' | trans  }}</span></a></li>
        
        {% if app.user %}
            <li class="opener" style="-webkit-user-select: none; cursor: pointer; white-space: nowrap; opacity: 1;"><a class="icon fa-user" href="#"></a>
                <ul class="" style="-webkit-user-select: none; display: none; position: absolute;">
                    <li><a href="{{ path('core_actor_profile') }}" style="display: block;">Perfil</a></li>
                    <li><a href="{{ path('logout') }}" style="display: block;">Cerrar sesi√≥n</a></li>
                </ul>
            </li>
        {% else %}
            <li style="white-space: nowrap;"><a class="icon fa-user" href="/login"></a></li>
        {% endif %}
        <li class="container-language">{{ get_languages() }}</li>
        
    </ul>
</nav>
